$bule = #0089dc
$hei = #181818
@keyframes scaleDialog
  from
    transform scale(0)
  to
    transform scale(1)
@keyframes scaleBox
  0%
    transform scale(1)
  25%
    transform scale(0.8)
  50%
    transform scale(1.2)
  75%
    transform scale(0.8)
  100%
    transform scale(1)
.height-keyword
  color #0089dc !important
  font-weight: bold
.dialog
  position: fixed
  left: 0
  top: 0
  bottom: 0
  right: 0
  z-index: 200
  width: 100%
  height: 100%
  background: rgba(0,0,0,.4);
  .dialog-w
    padding: 0 30px
    width: 100%
    height: 100%
    display: flex
    align-items center
    justify-content center
    .dialog-c
      width: 100%
      border-radius 8px
      background-color: rgba(255,255,255,.9)
      animation scaleDialog .2s
      position: relative
      .title
        padding: 20px
        text-align: center
        font-size: 20px
        font-weight: bold
        color #000
      .input-w
        width: 100%
        padding 0 20px 40px
      .input-c
        width: 100%
        height: 48px
        background-color: #fff
        display: flex
        align-items center
        .text-input
          width: 50%
          height: 100%
          padding-left: 10px
        .img-code
          width: 50%
          height: 100%
          padding: 6px
      .err-imgCode
        position: absolute
        left: 20px
        display flex
        align-items center
        margin-top: -24px
        img
          width: 15px
          height: 15px
          margin-right: 4px
        .err-t
          font-size: 12px
          color #ff6000
      .btn-w
        display flex
        align-items center
        justify-content center
        border-top: 1px solid #ddd
        .btn
          width: 50%
          height: 46px
          display flex
          align-items center
          justify-content center
          &:first-child
            color #666
            border-right: 1px solid #ddd
          &:last-child
            color #3190e8
            font-weight: 700
